import discord
from discord.ext import commands
import os
import random
import requests

intents = discord.Intents.default()
intents.message_content = True

bot = commands.Bot(command_prefix='$', intents=intents)

@bot.event
async def on_ready():
    print(f'We have logged in as {bot.user}')

@bot.command()
async def hello(ctx):
    await ctx.send(f'Hola, soy un bot {bot.user}!, usa $ayuda si quieres que te ayude mostrando mis comandos')

@bot.command()
async def ayuda(ctx):
    await ctx.send("tengo tres comandos $dato: sirve para darte un dato curioso, $video: te mostrare un video cool y $adicion: dame dos numeros y te dare la suma entre esos numeros")

@bot.command()
async def heh(ctx, count_heh = 5):
    await ctx.send("he" * count_heh)

@bot.command()  
async def dato(ctx):
    await ctx.send("Como promedio, el coraz√≥n late unas 3 mil millones de veces durante la vida de una persona.")

@bot.command()
async def video(ctx):
    await ctx.send("este video se ve cool: https://www.youtube.com/watch?v=YhQ5Sra9DBs ")

@bot.command()
async def adicion(ctx, a:float,b:float):
    resultado=a+b
    await ctx.send(f"{resultado}")

@bot.command()
async def mem(ctx):
    img_name = random.choice(os.listdir('images'))
    with open(f'images/{img_name}', 'rb') as f:
        picture = discord.File(f)

    await ctx.send(file=picture)

def get_duck_image_url():    
    url = 'https://random-d.uk/api/random'
    res = requests.get(url)
    data = res.json()
    return data['url']


@bot.command('duck')
async def duck(ctx):
    image_url = get_duck_image_url()
    await ctx.send(image_url)    

def get_dog_image_url():    
    url = 'https://random.dog/woof.json'            
    res = requests.get(url)
    data = res.json()
    return data['url']


@bot.command('dog')
async def dog(ctx):
    image_url = get_dog_image_url()
    await ctx.send(image_url) 

def get_fox_image_url():    
    url = 'https://randomfox.ca/floof/'            
    res = requests.get(url)
    data = res.json()
    return data['url']


@bot.command('fox')
async def fox(ctx):
    image_url = get_fox_image_url()
    await ctx.send(image_url)     

def get_poke_image_url():    
    url = 'https://pokeapi.co'            
    res = requests.get(url)
    data = res.json()
    return data['url']


@bot.command('poke')
async def poke(ctx):
    image_url = get_poke_image_url()
    await ctx.send(image_url)  

bot.run("TOKEN")
